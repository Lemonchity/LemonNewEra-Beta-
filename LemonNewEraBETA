local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/deividcomsono/Obsidian/refs/heads/main/Library.lua"))()

local Window = Library:CreateWindow({
    Title = "My Script",
    Footer = "v1.0.0",
    ToggleKeybind = Enum.KeyCode.RightControl,
    Center = true,
    AutoShow = true
})

local MainTab = Window:AddTab("Main", "home", "Main features")
-- Second parameter is the optional icon name from lucide.dev, third is an optional description

local UISettingsTab = Window:AddTab({
    Name = "UI Settings",
    Description = "Customize the UI",
    Icon = "settings"
})

local LeftGroupbox = UISettingsTab:AddLeftGroupbox("Settings", "wrench")
local RightGroupbox = UISettingsTab:AddRightGroupbox("Information", "info")

local MyButton = LeftGroupbox:AddButton({
    Text = "Tiger Admin",
    Func = function()
        print("Running")
    end
})
